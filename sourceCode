    <script>
        // Configuratie voor de foto's
        // VERVANG DEZE URLS DOOR JE EIGEN FOTO'S
        const correctPhotos = [0, 2, 5]; // Indices van foto's met jouw gezicht (0-8)
        
        // Placeholder foto's - vervang deze door echte foto URLs
        const photoUrls = [
            '![Image](https://github.com/user-attachments/assets/d4c68ae6-b452-4145-bf52-6f213d61f5c3)', // Foto 1 
            '![Image](https://github.com/user-attachments/assets/449d7108-7c7e-4c1b-a526-db3d26c22b3b)', // Foto 2 
            '![Image](https://github.com/user-attachments/assets/39abb2a5-27ca-4e42-ad1e-243c42ba8f51)', // Foto 3
            '![Image](https://github.com/user-attachments/assets/19835e6c-834b-4922-a44f-8fa13801f9bb)', // Foto 4 
            '![Image](https://github.com/user-attachments/assets/57c319f3-b3fa-40cc-94d3-eb0d8faf7c14)', // Foto 5
            '![Image](https://github.com/user-attachments/assets/424ea1c6-1231-4693-ad4d-e6bff029c5a7)', // Foto 6 
            '![Image](https://github.com/user-attachments/assets/60f7b5d6-6e98-4bc3-ba7e-63c281eed960)', // Foto 7 
            '![Image](https://github.com/user-attachments/assets/f8d45500-1c1b-4afa-a8ce-86b66a44807e)', // Foto 8 
            '![Image](https://github.com/user-attachments/assets/35e8ea1d-9dcc-4739-acc5-912cf8640227)'  // Foto 9 
        ];

        // CONFIGUREER HIER DE PRIJZEN VOOR ELKE COUPON
        const prizes = {
            1: "Je bent de <strong>allerleukste vriendin</strong> en hierbij heb je een <strong>kus gewonnen</strong> üíã die je mag inzetten wanneer jij dat wilt!",
            2: "Je bent de <strong>allerliefste</strong> en hierbij heb je een <strong>knuffel gewonnen</strong> ü§ó die je mag inzetten wanneer jij dat wilt!",
            3: "Je bent <strong>geweldig</strong> en hierbij heb je een <strong>date naar keuze gewonnen</strong> üçΩÔ∏è die je mag inzetten wanneer jij dat wilt!",
            4: "Je bent de <strong>beste</strong> en hierbij heb je een <strong>verwendag gewonnen</strong> üåü die je mag inzetten wanneer jij dat wilt!"
        };

        let selectedPhotos = [];
        let selectedCoupon = null;

        function selectCoupon(couponNumber) {
            selectedCoupon = couponNumber;
            document.getElementById('couponScreen').classList.remove('active');
            document.getElementById('captchaScreen').classList.add('active');
        }

        function toggleCheckbox() {
            const checkbox = document.getElementById('robotCheckbox');
            const photoChallenge = document.getElementById('photoChallenge');
            
            checkbox.classList.toggle('checked');
            
            if (checkbox.classList.contains('checked')) {
                setTimeout(() => {
                    photoChallenge.style.display = 'block';
                    generatePhotos();
                }, 300);
            } else {
                photoChallenge.style.display = 'none';
            }
        }

        function generatePhotos() {
            const grid = document.getElementById('photosGrid');
            grid.innerHTML = '';
            
            for (let i = 0; i < 9; i++) {
                const photoDiv = document.createElement('div');
                photoDiv.className = 'photo-option';
                photoDiv.onclick = () => togglePhoto(i);
                
                if (photoUrls[i]) {
                    const img = document.createElement('img');
                    img.src = photoUrls[i];
                    img.alt = `Foto ${i + 1}`;
                    photoDiv.appendChild(img);
                } else {
                    // Placeholder tekst als er geen foto URL is
                    photoDiv.textContent = `Foto ${i + 1}\n(Vervang door eigen afbeelding)`;
                }
                
                grid.appendChild(photoDiv);
            }
        }

        function togglePhoto(index) {
            const photos = document.querySelectorAll('.photo-option');
            const photo = photos[index];
            
            if (selectedPhotos.includes(index)) {
                selectedPhotos = selectedPhotos.filter(i => i !== index);
                photo.classList.remove('selected');
            } else {
                selectedPhotos.push(index);
                photo.classList.add('selected');
            }
            
            document.getElementById('errorMessage').classList.remove('show');
        }

        function verifySelection() {
            const errorMessage = document.getElementById('errorMessage');
            
            // Check of de selectie correct is
            const isCorrect = correctPhotos.length === selectedPhotos.length &&
                correctPhotos.every(i => selectedPhotos.includes(i));
            
            if (isCorrect) {
                // Toon de prijs voor de geselecteerde coupon
                const prizeMessage = document.getElementById('prizeMessage');
                prizeMessage.innerHTML = prizes[selectedCoupon];
                
                document.getElementById('captchaScreen').classList.remove('active');
                document.getElementById('successScreen').classList.add('active');
            } else {
                errorMessage.classList.add('show');
                // Reset selectie na 1.5 seconden
                setTimeout(() => {
                    selectedPhotos = [];
                    document.querySelectorAll('.photo-option').forEach(photo => {
                        photo.classList.remove('selected');
                    });
                }, 1500);
            }
        }
    </script>
</body>
